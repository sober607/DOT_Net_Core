@inject Microsoft.AspNetCore.Http.IHttpContextAccessor context
@{
    ViewData["Title"] = "Login";
}

@model AccountLoginViewModel
    <h1>Login</h1>
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@context.HttpContext.Request.Query["ReturnUrl"].ToString()" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Email"></label><br>
            <input asp-for="Email" />
        </div>
        <div>
            <label asp-for="Password"></label><br>
            <input asp-for="Password" />
        </div>

        <div>
            <label asp-for="RememberMe">Stay logged in?</label><br>
            <input asp-for="RememberMe" />
        </div>


        <button type="submit">Login</button>
    </form>
